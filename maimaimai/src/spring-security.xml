<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<global-method-security pre-post-annotations="enabled">
		<!-- AspectJ pointcut expression that locates our "post" method and applies 
			security that way <protect-pointcut expression="execution(* bigbank.*Service.post*(..))" 
			access="ROLE_TELLER"/> -->
	</global-method-security>

	<!-- Configuring RoleVoter bean to use custom access roles, by default roles 
		should be in the form ROLE_{XXX} -->
	<beans:bean id="roleVoter"
		class="org.springframework.security.access.vote.RoleVoter">
		<beans:property name="rolePrefix" value=""></beans:property>
	</beans:bean>

	<beans:bean id="webExpressionVoter"
		class="org.springframework.security.web.access.expression.WebExpressionVoter">
	</beans:bean>

	<beans:bean id="accessDecisionManager"
		class="org.springframework.security.access.vote.AffirmativeBased">
		<beans:constructor-arg name="decisionVoters"
			ref="webExpressionVoter" />
	</beans:bean>

	<http use-expressions="true" authentication-manager-ref="dao-auth"
		access-decision-manager-ref="accessDecisionManager">
		<!-- <intercept-url pattern="/login" access="permitAll" /> <intercept-url 
			pattern="/resources/**" access="permitAll" /> -->
		<intercept-url pattern="/**" access="permitAll" />
		<intercept-url pattern="/secure/**" access="hasRole('admin')" />
		<!-- <form-login login-page="/login" login-processing-url="/j_spring_security_check" 
			authentication-failure-url="/login/failure" username-parameter="username" 
			password-parameter="password" /> -->
		<form-login login-page="/login.jsp" login-processing-url="/login/check"
			username-parameter="username" password-parameter="password"
			default-target-url="/secure/home" always-use-default-target="true" />
		<logout invalidate-session="true" logout-success-url="http://www.google.com"
			logout-url="/j_spring_security_logout" delete-cookies="JSESSIONID" />
		<access-denied-handler error-page="/denied" />
		<session-management invalid-session-url="/resources/invalidesession.html">
			<concurrency-control max-sessions="1"
				expired-url="/resources/expiredsession.html" />
		</session-management>
	</http>


	<authentication-manager id="dao-auth">
		<authentication-provider user-service-ref="userDetailsService">
		</authentication-provider>
	</authentication-manager>

	<beans:bean id="userDetailsService" class="com.mmm.security.SysUserDetailsService" />
</beans:beans>